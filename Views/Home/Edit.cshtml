@model Онлайн_билеты.Models.Client

@{
    ViewBag.Title = "Редактирование данных Клиента";
}

<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">

    <div class="form-group">
        <label asp-for="Client_Name" class="control-label">Имя</label>
        <input type="text" asp-for="Client_Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Age" class="control-label">Должность</label>
        <input type="number" asp-for="Age" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Passport" class="control-label">Паспортные данные</label>
        <input type="text" asp-for="Passport" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="Phone" class="control-label">Оклад</label>
        <input type="text" asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>


<style>
    .btn {
        border: 1px solid black;
    }
</style>
